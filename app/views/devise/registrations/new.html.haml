= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .sign-up
    %form
      %h1.sign-up-title Sign in
      = f.text_field :name, autofocus: true, autocomplete: "name", class: "sign-up-input", placeholder: "nickname"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "sign-up-input", placeholder: "email?"
      = f.password_field :password, autocomplete: "new-password", class: "sign-up-input", placeholder: "password"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "sign-up-input", placeholder: "password(reaffirmation)"
      = f.submit "Sign in", class: "sign-up-button"
