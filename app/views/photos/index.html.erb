<div class="body">
  <div class="contents">
    
      <%= render "photo" %>
    
    <div class="image-box">
      <div class="card bottom" style="width: 20rem;">
        <%= form_for [@picture, @photo] do |f| %>
          <div class="photo-add"> 
              <%= f.label :photo do %>
                <%= fa_icon 'photo', class: "fa fa-picture-o fa-3x fa-fw btn-outline-primary" %>
                <%= f.file_field :photo, class: 'hidden' %>
              <% end %>
          </div>
          <div class="card-body center">
            <%= f.submit 'Click to add photo.', class: 'btn btn-primary btn-sm' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="space">
      space-box
    </div>
  </div>
</div>
